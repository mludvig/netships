CC	= @CC@
CXX	= @CXX@
CFLAGS	= -Wall -g -O2 -I$(TOPDIR)/util
CFLAGS += @CFLAGS@ @CPPFLAGS@ @DEFS@
LDFLAGS	= @LDFLAGS@ @LIBS@

CPP	= $(CC) -E

ARCHDIR = $(TOPDIR)/arch

.c.s:
	$(CC) $(CFLAGS) -S -o $*.s $<
.s.o:
	$(AS) -c -o $*.o $<
.c.o:
	$(CC) $(CFLAGS) -c -o $*.o $<
.cc.o:
	$(CXX) $(CFLAGS) -c -o $*.o $<
